{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block head %}
    {{ knp_pagination_rel_links(pagination) }}
{% endblock %}

{% block main %}
    <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-200">
        <div class="container px-6 py-8 mx-auto">
            <h3 class="text-3xl font-medium text-gray-700">Articles</h3>

            <div class="mt-4">
                <div class="flex flex-wrap -mx-6">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Code</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>SpreadsheetName</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for article in pagination %}
                            <tr>
                                <td>{{ article.id }}</td>
                                <td>{{ article.code }}</td>
                                <td>{{ article.description }}</td>
                                <td>{{ article.price }}</td>
                                <td>{{ article.spreadsheetName }}</td>
                                <td>
                                    <a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    {# <a href="{{ path('app_article_new') }}">Create new</a>#}

                    <div class="w-full flex justify-center items-center mt-8">
                        {{ knp_pagination_render(pagination, "components/_custom_pagination.html.twig") }}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
