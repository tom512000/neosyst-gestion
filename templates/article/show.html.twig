{% extends 'base.html.twig' %}

{% block main %}
<main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-200">
    <div class="container px-6 py-8 mx-auto">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ article.code }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ article.price }}</td>
            </tr>
            <tr>
                <th>SpreadsheetName</th>
                <td>{{ article.spreadsheetName }}</td>
            </tr>
        <tr>
            <th>Image</th>
            {% if article.picture != "" %}
                <td>
                    <img src="{{ asset('uploads/' ~ article.picture) }}" alt="Article {{ article.code }}">
                </td>
            {% else %}
                <td>
                    <img src="{{ asset('images/default-image-article.png') }}" alt="Article {{ article.code }}">
                </td>
            {% endif %}
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}">back to list</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
