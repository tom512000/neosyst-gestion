{% extends 'base.html.twig' %}

{% block homePage %}text-gray-500 hover:bg-gray-700 hover:bg-opacity-25 hover:text-gray-100{% endblock %}
{% block savPage %}text-gray-500 hover:bg-gray-700 hover:bg-opacity-25 hover:text-gray-100{% endblock %}
{% block clientPage %}text-gray-500 hover:bg-gray-700 hover:bg-opacity-25 hover:text-gray-100{% endblock %}
{% block articlePage %}text-gray-100 bg-gray-700 bg-opacity-25{% endblock %}

{% block header %}
    <div class="flex">
        <h3 class="text-3xl font-medium text-gray-700 font-lexend">Article {{ article.code }}</h3>
        <p class="flex items-center font-light text-gray-700 font-lexend mt-2 ml-3">Suppression</p>
    </div>
{% endblock %}

{% block main %}
    <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-200">
        <div class="container px-6 py-4 mx-auto h-4/5">
            <div class="h-full flex justify-center items-center" >
                <div class="w-full max-w-lg p-5 relative mx-auto my-auto rounded-xl shadow-lg bg-white">
                    <div>
                        <div class="text-center p-5 flex-auto justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 flex items-center text-red-500 mx-auto" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                            </svg>
                            <h2 class="text-xl font-bold py-4">Êtes-vous sûr ?</h2>
                            <p class="text-sm text-gray-500 px-8">
                                Êtes-vous sûr de vouloir supprimer cet article ?
                                Cette action est irréversible.
                            </p>
                        </div>
                        <div class="w-full p-3 mt-2 flex justify-center">
                            <a href="{{ path('app_article_show', {'id': article.id}) }}" class="w-[95px] mb-2 mr-5 md:mb-0 bg-white px-5 py-2 text-sm shadow-sm font-medium tracking-wider border text-gray-600 rounded-full hover:shadow-lg hover:bg-gray-100 transition-all duration-300">
                                Annuler
                            </a>
                            <form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}" class="w-[112px] flex justify-center items-center bg-red-500 border border-red-500 text-sm shadow-sm font-medium tracking-wider text-white rounded-full hover:shadow-lg hover:bg-red-600 transition-all duration-300">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}" />
                                <button class="w-full h-full px-5 py-2">Confirmer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
